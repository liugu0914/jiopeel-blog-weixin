/* pages/comment/comment.wxss */

.comment{
  position: fixed;
  min-height: 100vh;
  width: 100vw;
  left: 0px;
  right: 0px;
  top: 100%;
  bottom: 0px;
  z-index: 100;
  transition: top 0.5s ;
}

.comment-card{
  bottom: 0;
  margin: 0;
  padding: 0;
  position: absolute;
  height: 50%;
  width: 100%;
  border-radius: 0;
  z-index: 120;
  border-top-left-radius: 1rem;
  border-top-right-radius: 1rem;
  background-color: #313a46 !important;
  color: #f4f4f4;
}


.comment.show{
  top:0;
  overflow: hidden;
}


.comment-header{
  padding: 0.75rem 1.5rem;
  margin-top: 0;
  margin-bottom: 0;
  color: #f4f4f4;
}

.comment-textarea{
  width: 100%;
  height: 100%;
}